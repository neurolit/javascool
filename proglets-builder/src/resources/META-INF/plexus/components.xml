<?xml version="1.0"?>
<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>proglet</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>clean</id>
						<phases>
							<clean>
								org.apache.maven.plugins:maven-clean-plugin:clean,
								org.javascool:proglets-builder:clean
							</clean>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>
								org.javascool:proglets-builder:clean
							</validate>
							<process-resources>
								org.apache.maven.plugins:maven-resources-plugin:resources
							</process-resources>
							<generate-sources>
								org.javascool:proglets-builder:generate-proglet-class,
								org.javascool:proglets-builder:add-jars
							</generate-sources>
							<compile>
								org.apache.maven.plugins:maven-compiler-plugin:compile
							</compile>
							<prepare-package>
								org.javascool:proglets-builder:prepackage
							</prepare-package>
							<package>
								org.apache.maven.plugins:maven-jar-plugin:jar
							</package>
							<install>
								org.apache.maven.plugins:maven-install-plugin:install,
								org.javascool:proglets-builder:clean
							</install>
							<deploy>
								org.apache.maven.plugins:maven-deploy-plugin:deploy
							</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
	</components>
</component-set>